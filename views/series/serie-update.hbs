<div class="main-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Actualizar Serie</h1>
                <hr>
                <form action="/series/{{_id}}/edit" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <div class="col">
                            <label class="form-label">TÃ­tulo</label>
                            <input type="text" class="form-control mb-4" id="emailInput" name="title" value="{{title}}"
                                required>
                            <label for="image">Image</label>
                            <input type="file" name="image" class="form-control-file" />
                            <input type="text" name="existingImage" hidden value="{{image}}">
                        </div>
                        <button class="btn btn-dark block my-3" type="submit">Actualizar</button>
                        <a class="btn btn-dark block my-3" href="/series/{{_id}}/delete">Delete</a>


                        {{#if errorMessage}}
                        <div id="errorMessage">
                            <p>{{errorMessage}}</p>
                        </div>
                        {{/if}}
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>